<div class="comment" id="comment-<%= comment.id %>">
  <h3>
    <%= comment.name %> <<%= comment.email %>> said:
    <% if @article.owned_by?(current_user) %>
      <span class="actions">
        <%= link_to 'Delete', article_comment_path(article_id: @article, id: comment),
          data: {confirm: 'Are you sure?'}, method: :delete, remote: true %>
      </span>
    <% end %>
  </h3>
  <%= comment.body %>
</div>
